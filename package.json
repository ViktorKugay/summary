{
  "name": "kugay-blog",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start:dev:frontend": "yarn workspace frontend start:dev",
    "start:dev:backend": "yarn workspace backend start:dev",
    "build": "yarn build:content && yarn build:frontend",
    "build:content": "node scripts/buildContent.js",
    "build:frontend": "yarn workspace frontend build",
    "build:backend": "yarn workspace backend build",
    "test": "run-p test:*",
    "test:frontend": "echo no test",
    "test:backend": "yarn workspace backend test",
    "test:backend:e2e": "yarn workspace backend test:e2e",
    "typecheck": "run-p typecheck:*",
    "typecheck:frontend": "yarn workspace frontend typecheck",
    "typecheck:backend": "yarn workspace backend typecheck",
    "lint": "run-p lint:*",
    "lint:frontend:js": "yarn workspace frontend lint:js",
    "lint:frontend:css": "yarn workspace frontend lint:css",
    "lint:backend": "yarn workspace backend lint",
    "format": "run-p format:*",
    "format:frontend:js": "yarn workspace frontend format:js",
    "format:frontend:css": "yarn workspace frontend format:css",
    "format:frontend:json": "yarn workspace frontend format:json",
    "format:backend": "yarn workspace backend format"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "HOOK=true yarn test",
      "post-checkout": "yarnhook",
      "post-merge": "yarnhook",
      "post-rewrite": "yarnhook"
    }
  },
  "lint-staged": {
    "linters": {
      "*.css": [
        "prettier --write",
        "stylelint --fix --config ./.stylelintrc-format",
        "git add"
      ],
      "*.{js,ts,tsx}": [
        "eslint --fix",
        "git add"
      ],
      "*.{md,json}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "packages/frontend/src/styles/reboot.css"
    ]
  },
  "dependencies": {
    "@material-ui/core": "4.9.10",
    "@material-ui/icons": "4.9.1",
    "animejs": "3.1.0",
    "autolinker": "3.1.0",
    "classnames": "2.2.6",
    "clipboard": "2.0.6",
    "core-js": "3.6.4",
    "dom-loaded": "1.0.1",
    "front-matter": "3.1.0",
    "notistack": "0.9.9",
    "prismjs": "1.23.0",
    "react": "16.13.1",
    "react-copy-to-clipboard": "5.0.2",
    "react-dom": "16.13.1",
    "react-hot-loader": "4.12.20",
    "react-router-dom": "5.1.2",
    "react-slick": "0.25.2",
    "react-use": "13.22.4",
    "regenerator-runtime": "0.13.3",
    "showdown": "1.9.1",
    "slick-carousel": "1.8.1",
    "smoothscroll": "0.4.0"
  },
  "devDependencies": {
    "@babel/core": "7.7.2",
    "@babel/preset-typescript": "7.7.2",
    "@testing-library/react": "8.0.1",
    "@types/jest": "24.0.18",
    "@types/lodash": "4.14.137",
    "@types/node": "12.7.5",
    "@types/react": "16.8.8",
    "@types/react-dom": "16.8.3",
    "@types/react-jsonschema-form": "1.6.4",
    "@typescript-eslint/eslint-plugin": "2.22.0",
    "@typescript-eslint/parser": "2.22.0",
    "autoprefixer": "9.7.1",
    "babel-loader": "8.0.6",
    "babel-preset-react-app": "9.0.2",
    "css-loader": "3.2.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-config-react-app": "5.2.0",
    "eslint-plugin-flowtype": "4.6.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "2.5.0",
    "file-loader": "4.2.0",
    "html-webpack-plugin": "3.2.0",
    "husky": "1.1.3",
    "jest": "25.1.0",
    "lint-staged": "8.0.4",
    "node-sass": "4.13.1",
    "npm-run-all": "4.1.3",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "postcss": "7.0.21",
    "postcss-custom-media": "7.0.8",
    "postcss-custom-properties": "9.0.2",
    "postcss-flexbugs-fixes": "4.1.0",
    "postcss-import": "12.0.1",
    "postcss-loader": "3.0.0",
    "postcss-nested": "4.2.1",
    "prettier": "1.19.1",
    "rimraf": "2.6.2",
    "source-map-explorer": "1.6.0",
    "style-loader": "1.0.0",
    "stylelint": "13.2.0",
    "stylelint-at-rule-no-children": "0.3.1",
    "stylelint-config-prettier": "8.0.1",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-declaration-block-no-ignored-properties": "2.3.0",
    "stylelint-media-use-custom-media": "1.0.0",
    "stylelint-order": "4.0.0",
    "stylelint-value-no-unknown-custom-properties": "2.0.0",
    "svg-inline-loader": "0.8.2",
    "ts-jest": "24.1.0",
    "ts-loader": "6.2.1",
    "ts-node": "8.2.0",
    "tslint": "5.20.0",
    "typed-scss-modules": "1.2.0",
    "typescript": "3.7.2",
    "webpack": "4.41.2",
    "webpack-cli": "3.3.10",
    "webpack-dev-server": "3.9.0",
    "yarnhook": "0.4.0"
  }
}
